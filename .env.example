# YSense™ v4.1 Platform Environment Configuration
# =====================================================
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to version control!
# =====================================================

# =====================================================
# AI API KEYS - REQUIRED FOR AGENT SYSTEM
# =====================================================

# QWEN API (Alibaba Cloud) - For X and PED agents
QWEN_API_KEY=your-qwen-api-key-here
QWEN_MODEL=qwen-plus
QWEN_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# Anthropic API (Claude) - For Y, Z, P, XV agents
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# =====================================================
# SECURITY & AUTHENTICATION
# =====================================================

# JWT Secret Key (GENERATE NEW IN PRODUCTION!)
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
ENCRYPTION_KEY=your-encryption-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Password Hashing
PASSWORD_SALT_ROUNDS=12

# =====================================================
# DATABASE CONFIGURATION
# =====================================================

# SQLite Database (Default for Development)
DATABASE_URL=sqlite:///database/ysense_v41.db

# For Production (PostgreSQL/MySQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/ysense_db
# DATABASE_URL=mysql://username:password@localhost:3306/ysense_db

# =====================================================
# PLATFORM CONFIGURATION
# =====================================================

# Platform Settings
PLATFORM_NAME=YSense™ v4.1 | 慧觉™
PLATFORM_VERSION=4.1
PLATFORM_ENVIRONMENT=development
PLATFORM_URL=http://localhost:8501

# Server Ports
API_PORT=8003
UI_PORT=8501

# =====================================================
# REVENUE & Z PROTOCOL
# =====================================================

# Base Revenue Rate (EUR)
BASE_RATE_EUR=0.10
PLATFORM_FEE_PERCENTAGE=15
COMMUNITY_SHARE_PERCENTAGE=15

# Z Protocol
Z_PROTOCOL_VERSION=2.0
ENABLE_Z_PROTOCOL=true

# =====================================================
# FEATURE FLAGS
# =====================================================

# Enable/Disable Features
ENABLE_MCP_SERVER=false
ENABLE_DUAL_MODEL=true
ENABLE_AGENT_ORCHESTRATION=false

# =====================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =====================================================

# SMTP Settings (Leave blank to disable email)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=noreply@ysense.ai

# =====================================================
# GOOGLE CLOUD PLATFORM (PRODUCTION)
# =====================================================

# GCP Settings
GCP_PROJECT_ID=
GCP_REGION=asia-southeast1
GCS_BUCKET_NAME=

# =====================================================
# DEBUGGING & LOGGING
# =====================================================

DEBUG=true
LOG_LEVEL=INFO

# =====================================================
# CORS SETTINGS
# =====================================================

CORS_ALLOW_ALL=true
CORS_ORIGINS=http://localhost:8501,http://localhost:8502
